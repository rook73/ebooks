{% extends 'base.html.twig' %}

{% block title %}Книга{% endblock %}

{% block body %}
    <h1>Book</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ book.id }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ book.authorName }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ book.title }}</td>
            </tr>
            <tr>
                <th>Lang</th>
                <td>{{ book.lang }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ book.createdAt ? book.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('book_index') }}">вернуться к списку</a>

    <a class="btn btn-secondary" href="{{ path('book_edit', {'id': book.id}) }}">редактировать</a>

    {{ include('book/_delete_form.html.twig') }}
{% endblock %}
